{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "module": "esnext",
    "moduleResolution": "node",
    "noImplicitAny": false,
    "removeComments": false,
    "preserveConstEnums": true,
    "declaration": false,
    "outDir": "build",
    "target": "es5",
    "lib": [
      "es2015",
      "es2016",
      "es2017",
      "es2018.promise",
      "dom"
    ],
    "jsx": "react",
    "sourceMap": true,
    "importHelpers": true,
    "baseUrl": "./",
    "paths": {
      "tslib": [
        "node_modules/tslib/tslib.d.ts"
      ]
    }
  },
  "exclude": [
    "node_modules"
  ]
}